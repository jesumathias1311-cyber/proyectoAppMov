<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.proyecto_grupo5.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.proyecto_grupo5.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_nav_slideshow"
            app:destination="@id/nav_slideshow" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.proyecto_grupo5.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_incidencia"
        android:name="com.example.proyecto_grupo5.ui.Incidencia.CreateIncidenciaFragment"
        android:label="Incidencias"
        tools:layout="@layout/fragment_create_incidencia">
        <action
            android:id="@+id/action_nav_incidencia_to_nav_registrar"
            app:destination="@id/nav_registrar" />
        <action
            android:id="@+id/action_nav_incidencia_to_nav_list_inci"
            app:destination="@id/nav_list_inci" />
    </fragment>
    <fragment
        android:id="@+id/nav_registrar"
        android:name="com.example.proyecto_grupo5.ui.Incidencia.RegistrarFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_registrar" />
    <fragment
        android:id="@+id/nav_ajuste"
        android:name="com.example.proyecto_grupo5.ui.Ajustes.Menu_AjusteFragment"
        android:label="Ajustes"
        tools:layout="@layout/fragment_menu__ajuste" />
    <fragment
        android:id="@+id/nav_list_inci"
        android:name="com.example.proyecto_grupo5.ui.Incidencia.ListIncidenciaFragment"
        android:label="Historial de Incidencias"
        tools:layout="@layout/fragment_list_incidencia" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.proyecto_grupo5.ui.Login.LoginFragment"
        android:label="INCIO DE SECION"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_nav_registroUser"
            app:destination="@id/nav_registroUser" />
        <action
            android:id="@+id/action_loginFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_loginFragment_to_nav_admin"
            app:destination="@id/nav_admin" />
        <action
            android:id="@+id/action_loginFragment_to_nav_agente"
            app:destination="@id/nav_agente" />
    </fragment>
    <fragment
        android:id="@+id/nav_registroUser"
        android:name="com.example.proyecto_grupo5.ui.Registro.RegistroLoginFragment"
        android:label="REGIRSO DE USUARIO"
        tools:layout="@layout/fragment_registro_login" />

    <fragment
        android:id="@+id/nav_admin"
        android:name="com.example.proyecto_grupo5.ui.Admin.AdminFragment"
        android:label="AdminFragment"
        tools:layout="@layout/fragment_admin" />

    <fragment
        android:id="@+id/nav_agente"
        android:name="com.example.proyecto_grupo5.ui.Agente.AgenteFragment"
        android:label="AgenteFragment"
        tools:layout="@layout/fragment_agente">

        <action
            android:id="@+id/action_agente_to_listadoIncidencias"
            app:destination="@id/nav_listado_incidencias_agente" />

        <action
            android:id="@+id/action_agente_to_historialIncidencias"
            app:destination="@id/nav_historial_incidencias_agente" />
    </fragment>


    <!-- Listado de Incidencias Asignadas -->
    <fragment
        android:id="@+id/nav_listado_incidencias_agente"
        android:name="com.example.proyecto_grupo5.ui.Agente.ListadoIncidenciasAgenteFragment"
        android:label="Incidencias Asignadas"
        tools:layout="@layout/list_incidencia_agente" />

    <!-- Historial de Incidencias del Agente -->
    <fragment
        android:id="@+id/nav_historial_incidencias_agente"
        android:name="com.example.proyecto_grupo5.ui.Agente.HistorialIncidenciasAgenteFragment"
        android:label="Historial de Incidencias"
        tools:layout="@layout/historial_incidencias_agente" />

    <fragment
        android:id="@+id/nav_admin_list_agentes"
        android:name="com.example.proyecto_grupo5.ui.Admin.Admin_ListAgentesFragment"
        android:label="Lista de Agentes"
        tools:layout="@layout/fragment_admin_list_agentes" />

</navigation>