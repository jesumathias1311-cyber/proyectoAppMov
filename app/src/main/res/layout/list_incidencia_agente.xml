<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:fillViewport="true"
    tools:context=".ui.Agente.ListadoIncidenciasAgenteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo fijo -->
        <TextView
            android:id="@+id/tvTituloIncidenciasAgente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Incidencias Asignadas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#070000"
            android:gravity="center"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:elevation="3dp"
            android:layout_marginBottom="10dp" />

        <!-- Contenedor de la lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerIncidenciasAgente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_incidencia_agente" />

    </LinearLayout>
</ScrollView>
