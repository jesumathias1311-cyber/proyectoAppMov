<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTituloAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de AdministraciÃ³n"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnListarAgentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Agentes Registrados"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnRegistrarAgente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Nuevo Agente"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnAsignarIncidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignar Incidencias a Agente"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnActivarDesactivar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar / Desactivar Agente"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
