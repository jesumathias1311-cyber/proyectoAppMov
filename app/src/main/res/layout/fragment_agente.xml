<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Agente.AgenteFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvBienvenidaAgente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:text="Bienvenido, Agente"
            android:textColor="#090000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnVerIncidencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#070000"
            android:text="Ver Incidencias Asignadas" />

        <Button
            android:id="@+id/btnReportarIncidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#070000"
            android:text="Reportar Nueva Incidencia" />

        <!-- lista de incidencias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerIncidenciasAgente"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            tools:listitem="@layout/fragment_list_incidencia" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
